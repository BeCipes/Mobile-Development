<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/pb_fat"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pb_carbohydrates"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/pb_fat"
        android:fontFamily="@font/poppins_semi_bold"
        app:layout_constraintStart_toStartOf="@id/pb_fat"
        app:layout_constraintEnd_toEndOf="@id/pb_fat"
        app:layout_constraintBottom_toBottomOf="@id/pb_fat"
        tools:text="56%"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fat"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/pb_fat"
        app:layout_constraintStart_toStartOf="@id/pb_fat"
        app:layout_constraintEnd_toEndOf="@id/pb_fat" />

    <ProgressBar
        android:id="@+id/pb_carbohydrates"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pb_protein"
        app:layout_constraintStart_toEndOf="@id/pb_fat" />

    <TextView
        android:id="@+id/tv_carbohydrates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semi_bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/pb_carbohydrates"
        app:layout_constraintStart_toStartOf="@id/pb_carbohydrates"
        app:layout_constraintEnd_toEndOf="@id/pb_carbohydrates"
        app:layout_constraintBottom_toBottomOf="@id/pb_carbohydrates"
        tools:text="56%"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/carbohydrates"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/pb_carbohydrates"
        app:layout_constraintStart_toStartOf="@id/pb_carbohydrates"
        app:layout_constraintEnd_toEndOf="@id/pb_carbohydrates" />

    <ProgressBar
        android:id="@+id/pb_protein"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pb_carbohydrates" />

    <TextView
        android:id="@+id/tv_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semi_bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/pb_protein"
        app:layout_constraintStart_toStartOf="@id/pb_protein"
        app:layout_constraintEnd_toEndOf="@id/pb_protein"
        app:layout_constraintBottom_toBottomOf="@id/pb_protein"
        tools:text="56%"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/protein"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/pb_protein"
        app:layout_constraintStart_toStartOf="@id/pb_protein"
        app:layout_constraintEnd_toEndOf="@id/pb_protein" />
</androidx.constraintlayout.widget.ConstraintLayout>